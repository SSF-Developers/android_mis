<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="16dp"
    android:background="@color/white"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/grey_100"
        android:id="@+id/enterpriseRootLayout"
        >

        <ImageView
            android:id="@+id/enterpriseIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:src="@drawable/icroundhomework"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/displayName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:text="@string/enterpriseName"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/blackNight"
            app:layout_constraintStart_toEndOf="@+id/enterpriseIcon"
            app:layout_constraintTop_toTopOf="@+id/enterpriseIcon" />

        <TextView
            android:id="@+id/enterpriseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="4dp"
            android:text="@string/displayName"
            android:textAppearance="@style/TextAppearance.AppCompat.Display4"
            android:textColor="@color/blackOlive"
            android:textSize="12sp"
            app:layout_constraintStart_toEndOf="@+id/enterpriseIcon"
            app:layout_constraintTop_toBottomOf="@+id/displayName" />


        <ImageView
            android:id="@+id/enterpriseSelect"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/check"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>