<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="FormContainer" parent="Container.FullWidth">
        <item name="android:orientation">vertical</item>
        <item name="android:background">@drawable/surface_white_sheet</item>
        <item name="android:elevation">@dimen/shadow_normal</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:fillColor">@color/primary</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="rippleColor">@color/accent</item>
    </style>

    <style name="Cards">
        <item name="android:background">@drawable/surface_white_sheet</item>
        <item name="android:elevation">@dimen/shadow_normal</item>
    </style>

    <style name="Container.CircleAction">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/surface_circle_white</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="Container.FullWidth.Card">
        <item name="android:elevation">@dimen/cardview_default_elevation</item>
        <item name="android:layout_margin">@dimen/margin_x_small</item>
        <item name="android:background">@drawable/surface_white_sheet</item>
    </style>


</resources>