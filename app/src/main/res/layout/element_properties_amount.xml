<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Container.FullWidth"
    android:layout_weight="2"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/label"
        style="@style/Label.FormNameBold"
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:text="UserUserUserUserUserUserUserUser Name "
        app:layout_constraintRight_toLeftOf="@+id/countStatesColon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Label.FormNameSm"
        android:text=" : "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/amount"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Container.WrapContent"
        android:layout_width="0dp"
        android:layout_weight="1.25"
        app:prefixText="@string/Rs"
        android:textColorHint="@color/grey_700"
        app:prefixTextColor="@color/primary_text"
        app:hintTextColor="@color/grey_700"
        android:hint="Amount">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:inputType="number"
            android:textColor="@color/primary_text"
            android:textColorHint="@color/grey_700"
            android:text="0"
            />

    </com.google.android.material.textfield.TextInputLayout>



</LinearLayout>


