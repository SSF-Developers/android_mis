<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="@dimen/shadow_margin"
    android:background="@drawable/surface_white_sheet"
    android:padding="@dimen/padding_form_basic"
    android:elevation="4dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/H3"
        android:text="Camera Details" />

    <LinearLayout
        style="@style/FormRowContainer">
        <TextView
            android:id="@+id/cameraSerialNumTV"
            android:text="Camera Serial Num"
            style="@style/LabelField" />

        <LinearLayout
            style="@style/FormFieldContainer_WithAction">
            <EditText
                android:inputType="text"
                android:id="@+id/cameraSerialNumET"
                style="@style/FormField"/>
            <TextView
                android:id="@+id/cameraSerialErr"
                android:text=""
                style="@style/ErrorField"/>
        </LinearLayout>


    </LinearLayout>


</LinearLayout>

