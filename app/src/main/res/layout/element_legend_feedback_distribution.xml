            android:background="@color/rated_1" />

        <TextView
            style="@style/Label.LegendLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_x_small"
            android:text="Rated 1" />

    </LinearLayout>

    <LinearLayout
