<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Container.FullWidth"
    android:layout_weight="2"
    android:background="@color/white"
    android:layout_margin="@dimen/margin_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/label"
        style="@style/Label.FormNameBold"
        android:layout_width="0dp"
        android:layout_weight=".75"
        android:text="UserUserUserUserUserUserUserUser Name "
        app:layout_constraintRight_toLeftOf="@+id/countStatesColon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        style="@style/Label.FormNameSm"
        android:text=" : "
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon"
        android:layout_marginLeft="@dimen/margin_normal"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:background="@drawable/ic_status_fault"/>

    <LinearLayout
        android:id="@+id/timeIntervalContainer"
        app:layout_constraintBottom_toBottomOf="@+id/header"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        style="@style/Container.WrapContent"
        android:layout_width="0dp"
        android:layout_weight="1.25"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        <TextView
            android:id="@+id/durationLabel"
            style="@style/Label.FormValue"
            android:text=""/>

        <Spinner
            android:id="@+id/options"
            style="@style/Label.Spinner"
            android:background="@color/white"
            />

        <ImageView
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:background="@drawable/vic_drop_down"/>

    </LinearLayout>

</LinearLayout>


