<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/mwcIconCont"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/surface_white_sheet"
        android:elevation="4dp"
        android:padding="2dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias=".4">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@drawable/ic_wc_male" />
    </LinearLayout>

    <TextView
        android:id="@+id/title"
        style="@style/Header.Page"
        android:text="Male WC Cabins"
        app:layout_constraintLeft_toRightOf="@+id/mwcIconCont"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <TextView
        android:id="@+id/subTitle"
        style="@style/Label.Card"
        android:gravity="top"
        android:text="Airtel City Center"
        app:layout_constraintLeft_toLeftOf="@+id/title"
        app:layout_constraintTop_toBottomOf="@+id/title" />

</androidx.constraintlayout.widget.ConstraintLayout>
