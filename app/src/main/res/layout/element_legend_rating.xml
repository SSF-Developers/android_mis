            android:layout_marginLeft="@dimen/margin_x_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Label.LegendLabel"
            android:text="5-Star"/>

    </LinearLayout>
</LinearLayout>