<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="100dip"
    android:layout_height="100dip"
    android:layout_margin="@dimen/margin_normal"
    android:background="@drawable/surface_white_sheet"
    android:padding="@dimen/margin_small"
    android:stateListAnimator="@animator/elevate">


    <ImageView
        android:id="@+id/placeholder"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/remove"
        android:elevation="@dimen/cardview_default_elevation"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/surface_circle_white"
        android:padding="@dimen/margin_x_small"
        android:layout_margin="@dimen/margin_x_small"
        android:scaleType="fitXY"
        android:src="@drawable/ic_cross"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
